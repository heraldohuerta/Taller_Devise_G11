<div class="row">
  <div class="col-xs-8 col-sm-10 col-md-10">
    <h1>Usuarios</h1>
  </div>
</div>

<div class="row">
  <% @users.reverse.each do |user| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <h3>User:<%= user.name %></h3>
          <h3><%= user.email %></h3>
          <p>
            <%= link_to 'Edit', edit_user_registration_path, class: "btn btn-primary" %>
            <%= link_to 'Destroy', user_registration_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>


<br>
